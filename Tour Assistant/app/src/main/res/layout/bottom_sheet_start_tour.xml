<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/PoliceBtn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_alignParentTop="true"
           android:background="#000"
           android:foreground="?attr/selectableItemBackground"
           android:text="Police Position"
           android:textColor="#fff" />
       <Button
           android:id="@+id/ProblemBtn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_below="@id/PoliceBtn"
           android:background="#000"
           android:foreground="?attr/selectableItemBackground"
           android:text="Problem on road"
           android:textColor="#fff" />
       <Button
           android:id="@+id/LimitSpeedBtn"
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/ProblemBtn"
           android:background="#000"
           android:foreground="?attr/selectableItemBackground"
           android:text="Limit speed sign"
           android:textColor="#fff" />
       <TextView
           android:id="@+id/keyNotification"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:visibility="invisible"
           android:layout_alignParentTop="true"/>
       <EditText
           android:id="@+id/LimitSpeed"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:textSize="14sp"
           android:layout_below="@id/keyNotification"
           android:visibility="invisible"
           android:layout_alignParentTop="true"
           android:inputType="number" />
       <EditText
           android:id="@+id/Problem"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_below="@id/keyNotification"
           android:textSize="14sp"
           android:visibility="invisible"
           android:layout_alignParentTop="true"
           android:inputType="textLongMessage" />
   </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#000"
        android:foreground="?attr/selectableItemBackground"
        android:text="SEND NOTIFICATION"
        android:textColor="#fff" />

</LinearLayout>